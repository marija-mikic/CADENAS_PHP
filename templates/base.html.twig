  <header>
  <div class="logo">Products</div>

   <nav class="navbar">
   <a href="https://www.linkedin.com/in/marija-miki%C4%87-5552a149/">LINKEDIN</a>
   <a href="https://github.com/marija-mikic/CADENAS_PHP">GIT</a>
   
  </nav>  
  </header>
{% block body %}
  <section class="home" id="home">
<div class="content">
      <h3>All products</h3>
      <span> Choose one</span>
</div>
</section>
{% for product in products %}       
    
<section class="products" id="products">

    <div class="box-container">       
             <div class="box">
                      <div class="content">
                         <h3>{{product.title }}</h3>
                          <p>{{product.description }}</p>
                       </div>
              <div class="image">
                     
                          {% for picture in product.images %}  
                          <a href ="{{ path('app_show/product', {'id': product.id}) }}"><img src="{{ picture }}"></a>
    </div>
                     
                           {% endfor %} 
                                       
  </section>
     
 {% endfor %}

{% endblock %}
  {{knp_pagination_render(products)}}  
</html>